{
  "name": "SetupX",
  "version": "2.0.0",
  "description": "Individual Component Windows Development Setup Tool",
  "author": "anshulyadav32",
  "repository": "https://github.com/anshulyadav32/setupx-windows-setup",
  "installPath": "C:\\setupx",
  "logLevel": "INFO",
  "autoUpdate": true,
  "components": {
    "chocolatey": {
      "name": "chocolatey",
      "displayName": "Chocolatey",
      "description": "Community package manager for Windows",
      "scriptName": "chocolatey.ps1",
      "installMethod": "powershell",
      "website": "https://chocolatey.org",
      "status": "working",
      "category": "package-manager",
      "commands": {
        "install": "Set-ExecutionPolicy Bypass -Scope Process -Force; [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; iex ((New-Object System.Net.WebClient).DownloadString('https://community.chocolatey.org/install.ps1'))",
        "remove": "Remove-Item -Path \"$env:ChocolateyInstall\" -Recurse -Force; Remove-Item -Path \"$env:ChocolateyInstall\\bin\\choco.exe\" -Force",
        "update": "choco upgrade chocolatey -y",
        "check": "choco --version",
        "verify": "choco list --local-only",
        "test": "choco search git --limit-output",
        "path": "refreshenv"
      }
    },
    "scoop": {
      "name": "scoop",
      "displayName": "Scoop",
      "description": "Portable applications manager for development tools",
      "scriptName": "scoop.ps1",
      "installMethod": "powershell",
      "website": "https://scoop.sh",
      "status": "working",
      "category": "package-manager",
      "commands": {
        "install": "Set-ExecutionPolicy RemoteSigned -Scope CurrentUser; iex (New-Object System.Net.WebClient).DownloadString('https://get.scoop.sh')",
        "remove": "Remove-Item -Path \"$env:SCOOP\" -Recurse -Force",
        "update": "scoop update",
        "check": "scoop --version",
        "verify": "scoop list",
        "test": "scoop search git",
        "path": "refreshenv"
      }
    },
    "winget": {
      "name": "winget",
      "displayName": "WinGet",
      "description": "Microsoft's official Windows package manager",
      "scriptName": "winget.ps1",
      "installMethod": "microsoft-store",
      "website": "https://docs.microsoft.com/en-us/windows/package-manager/",
      "status": "working",
      "category": "package-manager",
      "commands": {
        "install": "winget install Microsoft.Winget.Source.Msix",
        "remove": "winget uninstall Microsoft.Winget.Source.Msix",
        "update": "winget upgrade --all",
        "check": "winget --version",
        "verify": "winget list",
        "test": "winget search git",
        "path": "refreshenv"
      }
    },
