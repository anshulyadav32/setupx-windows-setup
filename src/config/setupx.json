  "installation": {
    "installPath": "C:\\tools\\setup",
    "executablePath": "C:\\tools\\setup\\setupx.ps1",
    "jsonConfigPath": "C:\\tools\\setup\\setupx.json",
    "pathVariable": "C:\\tools\\setup",
    "quickInstall": {
      "description": "One-command SetupX installation",
      "command": "Invoke-RestMethod -Uri 'https://raw.githubusercontent.com/anshulyadav32/setupx-windows-setup/main/install.ps1' | Invoke-Expression"
    }
  },
  "troubleshooting": {
    "common-issues": {
      "404-not-found": {
        "problem": "Using old installation URL",
        "solution": "Use the new install.ps1 URL from the repository"
      },
      "setupx-command-not-found": {
        "problem": "PATH not updated in current session",
        "solution": "Restart PowerShell or run 'refreshenv'"
      },
      "component-not-found": {
        "problem": "Installation didn't complete properly",
        "solution": "Reinstall with force mode: 'iwr .../install.ps1 | iex -Force'"
      }
    }
  },
