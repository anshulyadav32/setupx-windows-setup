  "cli": {
    "commands": {
      "help": {
        "aliases": ["-h", "-help", "help"],
        "description": "Show help message and available commands",
        "usage": "setupx -h"
      },
      "list": {
        "description": "List all available components",
        "usage": "setupx list"
      },
      "status": {
        "description": "Show system status and installed components",
        "usage": "setupx status"
      },
      "install": {
        "description": "Install a specific component",
        "usage": "setupx install [component]"
      },
      "remove": {
        "description": "Remove/uninstall a specific component",
        "usage": "setupx remove [component]"
      },
      "update": {
        "description": "Update a specific component to latest version",
        "usage": "setupx update [component]"
      },
      "reinstall": {
        "description": "Reinstall a component (remove and install again)",
        "usage": "setupx reinstall [component]"
      },
      "test": {
        "description": "Test a component installation and functionality",
        "usage": "setupx test [component]"
      },
      "check": {
        "description": "Check if a component is installed and working",
        "usage": "setupx check [component]"
      },
      "path": {
        "description": "Show or update PATH environment variable",
        "usage": "setupx path [action]"
      },
      "refresh": {
        "description": "Refresh environment variables and PATH",
        "usage": "setupx refresh"
      }
    }
  },
