  "priority": 5,
  "status": "fully-working",
  "components": {
    "aws-cli": {
      "name": "aws-cli",
      "displayName": "AWS CLI",
      "description": "Command line interface for Amazon Web Services",
      "installMethod": "chocolatey",
      "website": "https://aws.amazon.com/cli",
      "status": "working",
      "category": "cloud-development",
      "commands": {
        "install": "choco install awscli -y",
        "remove": "choco uninstall awscli -y",
        "update": "choco upgrade awscli -y",
        "check": "aws --version",
        "verify": "aws configure list",
        "test": "aws help",
        "path": "$env:Path = [System.Environment]::GetEnvironmentVariable('Path','Machine') + ';' + [System.Environment]::GetEnvironmentVariable('Path','User')"
      }
    },
