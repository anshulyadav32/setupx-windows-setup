      "status": "working",
      "category": "mobile-development",
      "commands": {
        "install": "npm install -g react-native-cli",
        "remove": "npm uninstall -g react-native-cli",
        "update": "npm update -g react-native-cli",
        "check": "react-native --version",
        "verify": "react-native --help",
        "test": "npm list -g react-native-cli"
