{
  "name": "common-development",
  "displayName": "Common Development Tools",
  "description": "Essential development tools used across all programming languages",
  "category": "development",
  "priority": 3,
  "status": "fully-working",
  "components": {
    "git": {
      "name": "git",
      "displayName": "Git",
      "description": "Distributed version control system",
      "installMethod": "chocolatey",
      "website": "https://git-scm.com",
      "status": "working",
      "category": "common-development",
