      "commands": {
        "install": "choco install vscode -y",
        "remove": "choco uninstall vscode -y",
        "update": "choco upgrade vscode -y",
        "check": "code --version",
        "verify": "code --list-extensions",
        "test": "code --help",
        "path": "$env:Path = [System.Environment]::GetEnvironmentVariable('Path','Machine') + ';' + [System.Environment]::GetEnvironmentVariable('Path','User')"
